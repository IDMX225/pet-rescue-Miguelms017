<li>
  <article class="snippet">
    <img src="{{ post.data.image }}" srcset="{{ post.data.image | replace('upload/', 'upload/w_600/') }} 600w, {{ post.data.image | replace('upload/', 'upload/w_300/')}} 300w" sizes="(max-width: 600px) 100vw 300px" class="snippet__image" alt="{{ post.data.imageAlt}}" width="300" height="200">
    <h2 class="snippet__title"> <a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p class="snippet__meta">by <span>{{ post.data.author }}</span> on <span>{{ post.data.date | postDate
        }}</span>
    </p>
    <p class="snippet__body">{{ post.data.description }}</p>
    <a href="{{ post.url }}" class="btn btn--primary">Learn More</a>
  </article>
</li>
